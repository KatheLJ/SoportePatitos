<!--Se llama a un modelo de tipo Planilla para que se puedan mostrar los datos específicos-->
@model SoportePatitosBD.Modelo.Planilla
@{
    ViewBag.Title = "Colillas";
}



<!--Muestra solo un reporte especìfico -->
@using (Html.BeginForm("Colillas", "Empleados", FormMethod.Get))
{
    <!--Se indican las diferentes clases necesarias para darle un formato -->
    <div id="contact" class="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="titlepage">

                        <!--Se establece el título que aparecerá antes de la colilla -->
                        <h4> Soporte Patitos: </h4>
                        <h2> Colilla de pago</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-12">

                <!--Espacio que permite mostrar el dato del identificador de la planilla-->
                <!--Para todos los casos LabelFor permite mostrar un Label y Editor For el dato específico consultado (son HTML Helpers)-->
                <div class="col-lg-6 col-md-12 col-sm-12">
                    @Html.LabelFor(model => model.ID_planilla, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.ID_planilla, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    <br>
                </div>

                <!--Espacio par mostrar la cédula del empleado-->
                <div class="col-lg-6 col-md-12 col-sm-12">
                    @Html.LabelFor(model => model.Cedula, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Cedula, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    <br>
                </div>

                <!--Espacio par mostrar el salario bruto del empleado-->
                <div class="col-lg-6 col-md-12 col-sm-12">
                    @Html.LabelFor(model => model.Salario_bruto, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Salario_bruto, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>

                <!--Espacio par mostrar las deducciones por renta-->
                <div class="col-lg-6 col-md-12 col-sm-12">
                    @Html.LabelFor(model => model.Deducciones_fiscales, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Deducciones_fiscales, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    <br>
                </div>

                <!--Espacio par mostrar las deducciones de la CCSS-->
                <div class="col-lg-6 col-md-12 col-sm-12">
                    @Html.LabelFor(model => model.Deducciones_CCSS, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Deducciones_CCSS, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    <br>
                </div>

                <!--Espacio par mostrar las por ausencias-->
                <div class="col-lg-6 col-md-12 col-sm-12">
                    @Html.LabelFor(model => model.Deducciones_ausencias, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Deducciones_ausencias, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    <br>
                </div>

                <!--Espacio par mostrar el salario neto (salario luego de todas las deducciones)-->
                <div class="col-lg-6 col-md-12 col-sm-12">
                    @Html.LabelFor(model => model.Salario_neto, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Salario_neto, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    <br>
                </div>

                <br><br><br><br>
            </div>
        </div>
        <br><br><br><br>
    </div>

 }

