@model IEnumerable<SoportePatitosBD.Modelo.Evaluacion>

@{
    ViewBag.Title = "ReporteEmpleado";
}




<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Reporte de la Evaluación de desempeño del empleado</h1>
            </div>
        </div>
    </div>
</div>


<!--Muestra todos los reportes en la base de datos-->
<div class="single-services">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-12">
                    <div class="section-heading">
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover table-bordered">
                        <tr class="bg-secondary">
                            <th>
                                @Html.DisplayNameFor(model => model.ID_evaluacion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cedula)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Pregunta_1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Pregunta_2)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Pregunta_3)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Pregunta_4)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Pregunta_5)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ID_evaluacion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cedula)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pregunta_1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pregunta_2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pregunta_3)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pregunta_4)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pregunta_5)
                                </td>

                            </tr>
                        }
                    </table>
                </div>


            </div>
        </div>
    </div>
</div>




