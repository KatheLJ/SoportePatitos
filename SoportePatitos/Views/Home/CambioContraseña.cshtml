
@{
    ViewBag.Title = "CambioContraseña";
}



<!-- Form de inicia -->
<div id="contact" class="contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="titlepage">
                    <h2> Cambio de Contraseña </h2>
                    <p> Por favor, cambie la contraseña para poder continuar </p>
                </div>
            </div>
        </div>
        <br />
        <div class="col-md-12">
            <form id="login" action="InicioSesion" controller="Empleados" method="get" class="contact">
                <br />
                <!--Para digitar el usuario-->
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <fieldset>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-6 col-sm-6">Nueva Contraseña<span class="required">*</span></label>
                                <div class="col-md-12 col-sm-12">
                                    <input align="center" name="Contraseña" type="password" class="form-control" placeholder="*******" id="contrasena" required="">
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>

                <!--Para digitar la contraseña-->
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <fieldset>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-6 col-sm-6">Confirmar Contraseña<span class="required">*</span></label>
                                <div class="col-md-12 col-sm-12">
                                    <input align="center" name="Contraseña" type="password" class="form-control" placeholder="*******" id="contrasena" required="">
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>


                <!--Botones de guardar y limpiar campos-->
                <div class="text-center">
                    <fieldset>
                        <br />
                        <button type="submit" class="btn btn-warning" id="btn-Login">Cambiar</button>
                        <button type='reset' class="btn btn-dark">Limpiar campos</button>
                    </fieldset>
                </div>
            </form>
        </div>
    </div>
</div>





