@model IEnumerable<SoportePatitosBD.Modelo.Asistencia>
@{
    ViewBag.Title = "ListadoAsistencia";
}

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Listado de Asistencia</h1>
            </div>
        </div>
    </div>
</div>

<div class="single-services">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-12">
                    <div class="section-heading">
                    </div>
                </div>
               
                <div class="table-responsive">
                    <!--Muestra una tabla con todas las columnas del empleado-->
                    <table class="table table-hover table-bordered">
                        <tr class="bg-secondary">
                            <th>
                                @Html.DisplayNameFor(model => model.ID_asistencia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tipo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cedula)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ID_Estado)
                            </th>
                            
                        </tr>

                        <!--Muestra cada registro en la tabla de Empleados-->
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ID_asistencia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tipo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cedula)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ID_Estado)
                                </td>
                               
                                <td>
                                    <!--Permite dirigirse al reporte del empleado-->
                                    @Html.ActionLink("Evaluación de Desempeño", "ReporteEmpleado", new { id = item.ID_asistencia }, new { @class = "btn btn-info btn-sm" })
                                    <br><br>
                                    @Html.ActionLink("Eliminar", "", new { id = item.ID_asistencia }, new { @class = "btn btn-danger btn-sm" })
                                    <br><br>
                                    @Html.ActionLink("Actualizar", "", new { id = item.ID_asistencia }, new { @class = "btn btn-danger btn-sm" })

                                </td>
                            </tr>
                        }
                    </table>
                </div>


            </div>
        </div>
    </div>
</div>

