
@model IEnumerable<SoportePatitosBD.Modelo.Empleado>
@{
    ViewBag.Title = "ListadoEmpleados";
}

<div class="row">
    <div class="col-md-12">
        <div class="titlepage">
            <br />
            <br />
            <h2> Listado de Empleados </h2>
            <p> Vea o Descargue el Reporte de Evaluación </p>
        </div>
    </div>
</div>

<div class="">
    <div class="">
        <div class="row">
            <div class="">
                <div class="">
                </div>
                <div class="table-responsive">
                    <!--Muestra una tabla con todas las columnas del empleado-->
                    <table class="table table-hover table-bordered">
                        <tr class="bg-warning">
                            <th>
                                @Html.DisplayNameFor(model => model.Cedula)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre_Empleado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Fecha_ingreso)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Departamento.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Perfil.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Puesto.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Horario.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Usuario)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Contraseña)
                            </th>
                            <th></th>
                        </tr>

                        <!--Muestra cada registro en la tabla de Empleados-->
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cedula)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre_Empleado)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha_ingreso)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Departamento.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Perfil.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Puesto.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Horario.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Usuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Contraseña)
                                </td>
                                <td>
                                    <!--Permite dirigirse al reporte del empleado-->
                                    @Html.ActionLink("Ver", "ReporteEmpleado", new { Cedula = item.Cedula }, new { @class = "btn btn-warning btn-sm" })
                                    <br><br>
                                    @Html.ActionLink("Descargar", "GeneratePDFReporte", new { Cedula = item.Cedula }, new { @class = "btn btn btn-dark btn-sm" })
                                    <br><br>

                                </td>
                            </tr>
                        }
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

