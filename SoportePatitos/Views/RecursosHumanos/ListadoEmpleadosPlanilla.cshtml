<!--Se define el modelo necesario para poder mostrar todos los datos (Empleados)-->
@model IEnumerable<SoportePatitosBD.Modelo.Empleado>
@{
    ViewBag.Title = "ListadoEmpleados";

}

<!--Se muestra el título de la sección-->
<div class="row">
    <div class="col-md-12">
        <div class="titlepage">
            <br />
            <br />
            <h4> Soporte Patitos: </h4>
            <h2> Listado de Empleados disponibles </h2>
            <p> Seleccione el usuario al que desea calcular la planilla </p>
        </div>
    </div>
</div>

<!-- Inicio de Listado de empleados disponibles para calcular la planilla-->
<div class="single-services">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-12">
                    <div class="section-heading">
                    </div>
                </div>
                <div class="table-responsive">
                    <!--Muestra una tabla con todas las columnas del empleado -->
                    <!--El DisplayNameFor muestr un label para cada atributo del modelo-->
                    <table class="table table-hover table-bordered">
                        <tr class="bg-warning">
                            <th>
                                @Html.DisplayNameFor(model => model.Cedula)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre_Empleado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Puesto.Salario)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cantidad_Hijos)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Estado_Civil.Descripcion)
                            </th>

                            <th></th>
                        </tr>

                        <!--Muestra cada registro en la tabla de Empleados-->
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cedula)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre_Empleado)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Puesto.Salario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cantidad_Hijos)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Estado_Civil.Descripcion)
                                </td>

                                <td>
                                    <!--Permite dirigirse al reporte del empleado-->
                                    @Html.ActionLink("Calcular planilla", "CalculoPlanilla", new { salarioBase = item.Puesto.Salario, Cedula = item.Cedula, Cantidad_Hijos = item.Cantidad_Hijos, ID_Estado_Civil = item.ID_Estado_Civil }, new { @class = "btn btn-dark btn-sm" })
                                    <br><br>
                                </td>
                            </tr>
                        }
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
<!--Fin-->
