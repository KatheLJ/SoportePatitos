
@{
    ViewBag.Title = "Registro_Empleados";
    //List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
    //List<SelectListItem> items2 = (List<SelectListItem>)ViewBag.items;

    List<SelectListItem> items = (List<SelectListItem>)ViewData["Departamento"];
    List<SelectListItem> items2 = (List<SelectListItem>)ViewData["Puesto"];
    List<SelectListItem> items3 = (List<SelectListItem>)ViewData["Perfil"];
    List<SelectListItem> items4 = (List<SelectListItem>)ViewData["Horario"];
    List<SelectListItem> items5 = (List<SelectListItem>)ViewData["Estado_civil"];
}

<div id="contact" class="contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="titlepage">
                    <h2> Registro de Empleados </h2>
                    <h6 class="section">Los últimos campos se deben llenar por motivos fiscales</h6>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <!--Se define el metodo para enviar datos y el action relacionado-->
            <form id="registro" action="EnviarEmpleado" method="post" class="contact">

                <!--Campo para la cedula del empleado-->
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <fieldset>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-3 col-sm-3  label-align">Cedula<span class="required">*</span></label>
                                <div class="col-md-12 col-sm-12">
                                    <input id="Cedula" class="form-control p-1" type="text" name="Cedula" pattern="[0-9]{9,12}" required="" placeholder="Ej:121121121. Igual a la cédula (9-12 dígitos)." />
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>

                <!--Campo para el nombre completo del empleado-->
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <fieldset>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-6 col-sm-6  label-align">Nombre completo<span>*</span></label>
                                <div class="col-md-12 col-sm-12">
                                    <input class="form-control p-1" type="text" id="Nombre_empleado" name="Nombre_empleado" pattern="[a-zA-Z ]{4,30}" required="" placeholder="Ej: Mario Perez. Solo incluya letras." />
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>



                <!--Campo para la fecha de ingreso-->
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <fieldset>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-6 col-sm-6  label-align">Fecha de ingreso<span class="required">*</span></label>
                                <div class="col-md-12 col-sm-12">
                                    <input class="form-control p-1" type="date" id="Fecha_ingreso" name="fecha_ingreso" required="required" />
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>




                <!--Campo para el departamento del empleado-->
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <fieldset>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-6 col-sm-6  label-align">Departamento<span class="required">*</span></label>
                                <div class="col-md-12 col-sm-12">
                                    @Html.DropDownList("ID_departamento", items, "Seleccione el departamento", new { @class = "form-control p-1", required = "required" })
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>




                <!--Campo para el perfil del empleado-->
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <fieldset>
                            <div class="field item form-group">

                                <label class="col-form-label col-md-6 col-sm-6 label-align">Perfil<span class="required">*</span></label>
                                <div class="col-md-12 col-sm-12">
                                    @Html.DropDownList("ID_perfil", items3, "Seleccione el perfil", new { @class = "form-control p-1", required = "required" })
                                    <!--<input class="form-control" type="number" id="ID_perfil" name="ID_perfil" required='required'>-->
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>


                <!--Campo para el puesto del empleado-->
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <fieldset>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-6 col-sm-6  label-align">Puesto<span class="required">*</span></label>
                                <div class="col-md-12 col-sm-12">
                                    @Html.DropDownList("ID_puesto", items2, "Seleccione el puesto", new { @class = "form-control p-1", required = "required" })
                                    <!-- <input class="form-control" type="number" id="ID_puesto" name="ID_puesto">-->
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>



                <!--Campo para el horario del empleado-->
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <fieldset>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-6 col-sm-6  label-align">Horario<span class="required">*</span></label>
                                <div class="col-md-12 col-sm-12">
                                    @Html.DropDownList("ID_horario", items4, "Seleccione el horario", new { @class = "form-control p-1", required = "required" })
                                    <!-- <input class="form-control" type="number" id="ID_horario" name="ID_horario">-->
                                </div>

                            </div>
                        </fieldset>
                    </div>
                </div>


                <!--Campo para el usuario-->
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <fieldset>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-6 col-sm-6  label-align">Usuario<span class="required">*</span></label>
                                <div class="col-md-12 col-sm-12">
                                    <input class="form-control p-1" type="text" id="Usuario" name="Usuario" required placeholder="Ej: Mario236" />
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>

              
                <!--Campo para la contraseña-->
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <fieldset>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-6 col-sm-6  label-align">Contraseña<span class="required">*</span></label>
                                <div class="col-md-12 col-sm-12">
                                    <input class="form-control p-1" type="password" id="Contraseña" name="Contraseña" required placeholder="Ej: M01p89aft78*.01" />
                                </div>

                               
                            </div>
                        </fieldset>
                    </div>
                </div>

                

                <!--Campo para la cantidad de hijos-->
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <fieldset>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-6 col-sm-6  label-align">Cantidad de Hijos<span class="required">*</span></label>
                                <div class="col-md-12 col-sm-12">
                                    <input class="form-control p-1" type="number" id="Cantidad_Hijos" name="Cantidad_Hijos" required placeholder="Ej: 1" />
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>

                

                <!--Campo para el estado civil-->
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <fieldset>
                            <div class="field item form-group">
                                <label class="col-form-label col-md-6 col-sm-6  label-align">Estado Civil<span class="required">*</span></label>
                                <div class="col-md-12 col-sm-12">
                                    @Html.DropDownList("ID_Estado_Civil", items5, "Seleccione el estado civil", new { @class = "form-control p-1", required = "required" })
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>



                <div class="text-center">
                    <fieldset>
                        <!--Botones para crear un empleado y limpiar el formulario-->
                        <button type='submit' class="btn btn-warning">Registrar empleado</button>
                        <button type='reset' class="btn btn-dark">Limpiar campos</button>
                    </fieldset>
                </div>


            </form>


        </div>
    </div>
</div>
    


