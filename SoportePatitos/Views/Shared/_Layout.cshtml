<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--Se llama a todo lo necesario para que el proyecto funcione bien y tenga la gráfica adecuada-->
    <!-- bootstrap css -->
    <link href="~/Content/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Estilo css -->
    <link href="~/Content/Assets/css/style.css" rel="stylesheet" />
    <!-- Carácter Responsive-->
    <link href="~/Content/Assets/css/responsive.css" rel="stylesheet" />
    <!-- Scrollbar Custom CSS -->
    <link href="~/Content/Assets/css/jquery.mCustomScrollbar.min.css" rel="stylesheet" />
    <!-- Tweaks-->
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen">
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->

    <!--Otros scripts importantes-->
    <script src="~/Content/Assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/Assets/js/custom.js"></script>
    <script src="~/Content/Assets/js/jquery-3.0.0.min.js"></script>
    <script src="~/Content/Assets/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/Content/Assets/js/jquery.min.js"></script>
    <script src="~/Content/Assets/js/jquery.validate.js"></script>
    <script src="~/Content/Assets/js/plugin.js"></script>
    <script src="~/Content/Assets/js/popper.min.js"></script>
    <script src="https:cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js"></script>

    <!--Todo esto se encuentra en la carpte de Content - assets -->
</head>
<body>




    <!-- header inner -->
    <header>
        <div class="header-top">
            <div class="header">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
                            <div class="full">
                                <!--Se coloca el logo de la sección-->
                                <div class="center-desk">
                                    <div class="logo">
                                        <img src="~/Content/Assets/images/LogoSuperior.png" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
                            <div class="menu-area">
                                <div class="limit-box">
                                    <!--Se hace la barra de navegación-->
                                    <nav class="main-menu">
                                        <!--Si la sesión de empleado es diferente de nulo-->
                                        @if (Session["Empleado"] != null)
                                        {
                                            <!--Se muestra 3 menús desplegables con opciones-->
                                            <!--El primer dropdown con opciones del usuario-->
                                            <!--Las clases para el formato del dropdown estàn igual en el archivo style.css-->
                                            <div class="dropdown">
                                                <button class="dropbtn"> @HttpContext.Current.Session["Empleado"].ToString()</button>
                                                <div class="dropdown-content">
                                                    <a href="@Url.Action("Perfil", "Empleados")" class="nav-item nav-link">Mi perfil</a>
                                                    <a href="@Url.Action("Index", "Home")" class="nav-item nav-link active">Inicio</a>
                                                    <a href="@Url.Action("Logout", "Home")" class="nav-item nav-link">Salir</a>
                                                </div>
                                            </div>

                                            <!--El segundo dropdown con opciones de asistencia-->
                                            <div class="dropdown">
                                                <button class="dropbtn">Asistencia</button>
                                                <div class="dropdown-content">
                                                    <a href="@Url.Action("MarcaAsistencia", "Empleados")" class="nav-item nav-link">Mi Asistencia</a> <!-- Formulario para Marcar Asistencia -->
                                                </div>
                                            </div>

                                            <!--El tercer dropdown con opciones de planilla-->
                                            <div class="dropdown">
                                                <button class="dropbtn">Planilla</button>
                                                <div class="dropdown-content">
                                                    <a href="@Url.Action("HistorialColilla", "Empleados")" class="nav-item nav-link">Mi Historial de Colilla</a> <!-- Colillas de pago del usuario -->
                                                </div>
                                            </div>
                                        }

                                        <!--Si la sesión de gerencia es diferente de nulo-->
                                        @if (Session["Gerencia"] != null)
                                        {
                                            <!--El primer dropdown con opciones del usuario-->
                                            <div class="dropdown">
                                                <button class="dropbtn"> @HttpContext.Current.Session["Gerencia"].ToString()</button>
                                                <div class="dropdown-content">
                                                    <a href="@Url.Action("Perfil", "Empleados")" class="nav-item nav-link">Mi perfil</a>
                                                    <a href="@Url.Action("Index", "Home")" class="nav-item nav-link active">Inicio</a>
                                                    <a href="@Url.Action("Logout", "Home")" class="nav-item nav-link">Salir</a>
                                                </div>
                                            </div>

                                            <!--El segundo dropdown con opciones de asistencia-->
                                            <div class="dropdown">
                                                <button class="dropbtn">Asistencia</button>
                                                <div class="dropdown-content">
                                                    <a href="@Url.Action("MarcaAsistencia", "Empleados")" class="nav-item nav-link">Mi Asistencia</a> <!-- Formulario para Marcar Asistencia -->
                                                </div>
                                            </div>

                                            <!--El tercer dropdown con opciones de evaluación-->
                                            <div class="dropdown">
                                                <button class="dropbtn">Gestión de empleados</button>
                                                <div class="dropdown-content">
                                                    <a href="@Url.Action("Evaluacion", "RecursosHumanos")" class="nav-item nav-link">Formulario de Evaluación</a> <!-- Formulario de Evaluaciòn -->
                                                </div>
                                            </div>
                                        }


                                        <!--Si la sesión de recursos humanos es diferente de nulo-->
                                        @if (Session["RH"] != null)
                                        {
                                            <!--El primer dropdown con opciones del usuario-->
                                            <div class="dropdown">
                                                <button class="dropbtn"> @HttpContext.Current.Session["RH"].ToString()</button>
                                                <div class="dropdown-content">
                                                    <a href="@Url.Action("Perfil", "Empleados")" class="nav-item nav-link">Mi perfil</a>
                                                    <a href="@Url.Action("Index", "Home")" class="nav-item nav-link active">Inicio</a>
                                                    <a href="@Url.Action("Logout", "Home")" class="nav-item nav-link">Salir</a>
                                                </div>
                                            </div>

                                            <!--El segundo dropdown con opciones de planilla-->
                                            <div class="dropdown">
                                                <button class="dropbtn">Planilla</button>
                                                <div class="dropdown-content">
                                                    <a href="@Url.Action("HistorialColilla", "Empleados")" class="nav-item nav-link">Mi Historial de Colilla</a> <!-- Colillas de pago del usuario -->
                                                    <a href="@Url.Action("ListadoPlanilla", "RecursosHumanos")" class="nav-item nav-link">Mant.Planilla</a> <!-- Listado de Planillas  -->
                                                    <a href="@Url.Action("ListadoEmpleadosPlanilla", "RecursosHumanos")" class="nav-item nav-link">Cálculo de planilla</a> <!-- Manejo de Planillas -->
                                                </div>
                                            </div>

                                            <!--El tercer dropdown con opciones de evaluación-->
                                            <div class="dropdown">
                                                <button class="dropbtn">Gestión de empleados</button>
                                                <div class="dropdown-content">
                                                    <a href="@Url.Action("Registro_Empleados", "RecursosHumanos")" class="nav-item nav-link">Registro</a> <!-- Registro de Empleados -->
                                                    <a href="@Url.Action("Evaluacion", "RecursosHumanos")" class="nav-item nav-link">Formulario de Evaluación</a> <!-- Formulario de Evaluaciòn -->
                                                    <a href="@Url.Action("ListadoEmpleados", "RecursosHumanos")" class="nav-item nav-link">Mant.Empleados</a> <!-- Listado de empleados  -->
                                                </div>
                                            </div>

                                            <!--El cuarta dropdown con opciones de asistencia-->
                                            <div class="dropdown">
                                                <button class="dropbtn">Asistencia</button>
                                                <div class="dropdown-content">
                                                    <a href="@Url.Action("MarcaAsistencia", "Empleados")" class="nav-item nav-link">Mi Asistencia</a> <!-- Formulario para Marcar Asistencia -->
                                                    <a href="@Url.Action("ListadoAsistencia", "RecursosHumanos")" class="nav-item nav-link">Calcular Ausencias</a> <!-- Formulario para Marcar Asistencia -->
                                                </div>
                                            </div>

                                        }

                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
        <!-- end header inner -->

        <!--se establece el RenderBody para que el layout pueda funcionar-->
        <div class="container body-content">
            @RenderBody()
            <hr />

        </div>



</body>
</html>
